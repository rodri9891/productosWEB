<%- include("./../incluir/header.ejs") %>
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid">
            <h1 class="mt-4">Secci√≥n Productos</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                <li class="breadcrumb-item active">Productos</li>
            </ol>
            
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table mr-1"></i>
                    Listado de Productos - <a class="btn btn-success" href="/admin/productos/add">Nuevo Producto</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Titulo</th>
                                    <th>Estado</th>
                                    <th>Precio</th>
                                    <th>Rank</th>
                                    <th>Fecha Publicada</th>
                                    <th>Descripcion</th>
                                    <th>Destacado</th>
                                    <th>Usuario</th>
                                    <th>Categoria</th>
                                    <th>Marca</th>
                                    <th>Modelo</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>Titulo</th>
                                    <th>Estado</th>
                                    <th>Precio</th>
                                    <th>Rank</th>
                                    <th>Fecha Publicada</th>
                                    <th>Descripcion</th>
                                    <th>Destacado</th>
                                    <th>Usuario</th>
                                    <th>Categoria</th>
                                    <th>Marca</th>
                                    <th>Modelo</th>
                                    <th>Acciones</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                <% if (lista.length > 0){
                                    lista.forEach((productos) => { %> 
                                        <tr>
                                            <td><%=productos.id%></td>
                                            <td><%=productos.titulo%></td>
                                            <td><%=productos.estado%></td>
                                            <td><%=productos.precio%></td>
                                            <td><%=productos.rank%></td>
                                            <td><%=productos.fecha_publi%></td>
                                            <td><%=productos.descripcion%></td>
                                            <td><%=productos.destacado%></td>
                                            <td><%=productos.usuarios.nombre%></td>
                                            <td><%=productos.categorias.nombre%></td>
                                            <td><%=productos.marcas.nombre%></td>
                                            <td><%=productos.marcas.modelos_fk%></td>
                                            <td><a class="btn btn-primary" href="/admin/productos/modif/<%=productos.id%>" >Modificar</a>  -  
                                                <a class="btn btn-danger" href="/admin/productos/elim/<%=productos.id%>" onclick="return confirm('borrar')">Eliminar</a>  
                                                </td> 
                                        </tr>
                                    <%});
                                    }%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include("./../incluir/footer.ejs") %>