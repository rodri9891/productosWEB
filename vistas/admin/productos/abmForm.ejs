<%- include("./../incluir/header.ejs") %>
    <div id="layoutSidenav_content"> 
        <main>
            <div class="container-fluid">
                <h1 class="mt-4">Dashboard</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>

                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table mr-1"></i>
                        Nuevo Producto 
                    </div>
                    <div class="card-body">
                        <form action="" method="POST" >
                            <div class="form-group">
                                <label class="small mb-1" >Titulo:</label>
                                <input class="form-control py-4" name="titulo" type="text" placeholder="ingresa titulo" 
                                value="<%=data.titulo%>"/>
                            </div>
                            <div class="form-group">
                                <label class="small mb-1" >Descripción:</label>
                                <textarea class="form-control py-4" name="descripcion" placeholder="ingresa descripción *"><%=data.descripcion%></textarea> 
                            </div>

                            <div class="form-group">
                                <label class="small mb-1" >Fecha de publicación:</label>
                                <input class="form-control" type="date" name="fecha_publi" value="<%=data.fecha_publi%>">
                            </div>
                            <div class="form-group">
                                <label class="small mb-1" >Precio:</label>
                                <input class="form-control py-4" type="number" name="precio" min="1" max="50000" value="<%=data.precio%>">
                            </div>

                            <div class="form-group">
                                <label class="small mb-1" >Usuario: </label>
                                <select class="form-control py-2" name="usuario">
                                    <% if (usuarios.length > 0){
                                        usuarios.forEach((usuario) => { 
                                            if(data.usuarios && usuario.id == data.usuarios.id){%>
                                                <option selected="selected" value="<%=usuario.id%>"><%=usuario.nombre%></option>
                                            <% }else{ %>
                                                <option value="<%=usuario.id%>"><%=usuario.nombre%></option>
                                            <% }
                                        });
                                    }%>
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="small mb-1" >Categoría: </label>
                                <select class="form-control py-2" name="categoria">
                                    <% if (categorias.length > 0){
                                        categorias.forEach((categoria) => { 
                                            if(data.categorias && categoria.id == data.categorias.id){%>
                                                <option selected="selected" value="<%=categoria.id%>"><%=categoria.nombre%></option>
                                            <% }else{ %>
                                                <option value="<%=categoria.id%>"><%=categoria.nombre%></option>
                                            <% }
                                        });
                                    }%>
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="small mb-1" >Marca: </label>
                                <select class="form-control py-2"  name="marca">
                                    <% if (marcas.length > 0){
                                        marcas.forEach((marca) => { 
                                            if(data.marcas && marca.id == data.marcas.id){%>
                                                <option selected="selected" value="<%=marca.id%>"><%=marca.nombre%></option>
                                            <% }else{ %>
                                                <option value="<%=marca.id%>"><%=marca.nombre%></option>
                                            <% }
                                        });
                                    }%>
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="small mb-1" >Modelo: </label>
                                <select class="form-control py-2" name="modelo">
                                    <% if (modelos.length > 0){
                                        modelos.forEach((modelo) => { 
                                            if(data.modelos && modelo.id == marca.modelos_fk){%>
                                                <option selected="selected" value="<%=modelo.id%>"><%=modelo.nombre%></option>
                                            <% }else{ %>
                                                <option value="<%=modelo.id%>"><%=modelo.nombre%></option>
                                            <% }
                                        });
                                    }%>
                                </select>
                            </div>

                            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                 <input type="submit"  value ="Agregar" class="btn btn-primary" >
                            </div>
                        </form>
                    </div>
                </div>
                
        </main>
<%- include("./../incluir/footer.ejs") %>