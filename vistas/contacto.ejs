
<%- include("./incluir/header.ejs")%>
        <!-- Contact-->
        <section class="page-section" id="contact">
            <div class="container">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase">Contactenos</h2>
                    <h3 class="section-subheading text-muted">Contactese con algun administrador.</h3>
                </div>
                <form  name="sentMessage" action="" method="POST">
                    <div class="row align-items-stretch mb-5">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input class="form-control" id="name" name="nombre" type="text" placeholder="Tu nombre.. *" required="required"/>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" id="apellido" name="apellido" type="text" placeholder="Tu Apellido.. *" required="required"/>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" id="email" name="correo" type="email" placeholder="Tu Email.. *" required="required"/>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" id="phone" name="telefono" type="tel" placeholder="Tu Telefono.. *" required="required"/>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <select class="form-control" id="motivo" name="motivo" required="required">
                                    <option selected>...</option>
                                    <option value="1">Configuracion</option>
                                    <option value="2">Clasificados</option>
                                    <option value="3">Publicidad</option>
                                    <option value="4">Contacto</option>
                                </select>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-group-textarea mb-md-0">
                                <textarea class="form-control" name="comentario" id="message" placeholder="Tu Comentario.. *" required="required" data-validation-required-message="comentario"></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <div id="success"></div>
                        <button class="btn btn-primary btn-xl text-uppercase" id="sendMessageButton" type="submit">Enviar mensaje</button>
                    </div>
                </form>
            </div>
        </section>
<%- include("./incluir/footer.ejs")%>